<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!--对应mapper接口 -->
<mapper namespace="com.webank.webase.chain.mgr.user.UserMapper">
	<resultMap id="userMap"
		type="com.webank.webase.chain.mgr.user.entity.TbUser">
		<id column="user_id" javaType="java.lang.Integer" jdbcType="INTEGER"
			property="userId" />
		<result column="chain_id" javaType="java.lang.Integer"
			jdbcType="INTEGER" property="chainId" />
		<result column="group_id" javaType="java.lang.Integer"
			jdbcType="INTEGER" property="groupId" />
		<result column="sign_user_id" javaType="java.lang.String"
			jdbcType="VARCHAR" property="signUserId" />
		<result column="app_id" javaType="java.lang.String" jdbcType="VARCHAR"
			property="appId" />
		<result column="public_key" javaType="java.lang.String"
			jdbcType="VARCHAR" property="publicKey" />
		<result column="address" javaType="java.lang.String" jdbcType="VARCHAR"
			property="address" />
		<result column="description" javaType="java.lang.String"
			jdbcType="VARCHAR" property="description" />
		<result column="create_time" javaType="java.time.LocalDateTime"
			jdbcType="TIMESTAMP" property="createTime" />
		<result column="modify_time" javaType="java.time.LocalDateTime"
			jdbcType="TIMESTAMP" property="modifyTime" />
	</resultMap>

	<insert id="addUserRow" parameterType="com.webank.webase.chain.mgr.user.entity.TbUser">
		insert into
		tb_user(chain_id,group_id,sign_user_id,app_id,public_key,address,description,create_time,modify_time)
		values(#{chainId},#{groupId},#{signUserId},#{appId},#{publicKey},#{address},#{description},NOW(),NOW())
		<selectKey keyProperty="userId" order="AFTER" resultType="java.lang.Integer">
			SELECT LAST_INSERT_ID()
		</selectKey>
	</insert>

	<select id="queryUser" resultMap="userMap">
		select * from tb_user where 1=1
		<if test="userId != null">
			and user_id = #{userId}
		</if>
		<if test="chainId != null">
			and chain_id = #{chainId}
		</if>
		<if test="groupId != null">
			and group_id = #{groupId}
		</if>
		<if test="signUserId != null and signUserId != ''">
			and sign_user_id = #{signUserId}
		</if>
		<if test="address != null and address != ''">
			and address = #{address}
		</if>
		limit 1
	</select>

	<select id="countOfUser" parameterType="com.webank.webase.chain.mgr.user.entity.UserParam"
		resultType="java.lang.Integer">
		select count(1) from tb_user where 1=1
		<if test="userId != null">
			and user_id = #{userId}
		</if>
		<if test="chainId != null">
			and chain_id = #{chainId}
		</if>
		<if test="groupId != null">
			and group_id = #{groupId}
		</if>
		<if test="signUserId != null and signUserId != ''">
			and sign_user_id like CONCAT(#{signUserId},'%')
		</if>
		<if test="commParam != null and commParam != ''">
			and sign_user_id like CONCAT(#{commParam},'%')
			or address
			like CONCAT(#{commParam},'%')
		</if>
	</select>

	<select id="listOfUser" parameterType="com.webank.webase.chain.mgr.user.entity.UserParam"
		resultMap="userMap">
		select * from tb_user where 1=1
		<if test="userId != null">
			and user_id = #{userId}
		</if>
		<if test="chainId != null">
			and chain_id = #{chainId}
		</if>
		<if test="groupId != null">
			and group_id = #{groupId}
		</if>
		<if test="signUserId != null and signUserId != ''">
			and sign_user_id like CONCAT(#{signUserId},'%')
		</if>
		<if test="commParam != null and commParam != ''">
			and sign_user_id like CONCAT(#{commParam},'%')
			or address
			like CONCAT(#{commParam},'%')
		</if>
		order by user_id desc
		<if test="start != null and pageSize != null">
			limit #{start},#{pageSize}
		</if>
	</select>

	<update id="updateUser" parameterType="com.webank.webase.chain.mgr.user.entity.TbUser">
		update tb_user set modify_time = now()
		<if test="description != null and description != ''">
			,description = #{description}
		</if>
		where user_id = #{userId}
	</update>

	<delete id="deleteUser" parameterType="java.lang.Integer">
		delete from tb_user where
		chain_id = #{chainId}
	</delete>

	<delete id="deleteUserByGroupId" parameterType="java.lang.Integer">
		delete from
		tb_user where chain_id = #{chainId} and group_id = #{groupId}
	</delete>

</mapper>